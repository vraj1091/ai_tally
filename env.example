# =================================================================
# AI Tally Pro - Environment Configuration
# =================================================================
# Copy this file to .env and update values for your environment
# NEVER commit .env file to version control!
# =================================================================

# =================================================================
# SECURITY (IMPORTANT - Change these in production!)
# =================================================================
# Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =================================================================
# DATABASE
# =================================================================
DB_URL=sqlite:////app/data/database.db
# For PostgreSQL (recommended for production):
# DB_URL=postgresql://user:password@localhost:5432/ai_tally

# =================================================================
# TALLY CONFIGURATION
# =================================================================
TALLY_HOST=localhost
TALLY_PORT=9000
TALLY_REMOTE_ENABLED=True

# =================================================================
# OLLAMA / AI CONFIGURATION
# =================================================================
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=phi4:14b

# =================================================================
# CORS ORIGINS (comma-separated)
# =================================================================
CORS_ORIGINS=http://your-domain.com,http://localhost:5173

# =================================================================
# FRONTEND URLS
# =================================================================
VITE_API_URL=
VITE_WS_URL=ws://your-domain.com

# =================================================================
# LOGGING
# =================================================================
LOG_LEVEL=INFO
DEBUG=False

# =================================================================
# SECURITY OPTIONS
# =================================================================
SECURE_HEADERS=True
RATE_LIMIT_PER_MINUTE=60

